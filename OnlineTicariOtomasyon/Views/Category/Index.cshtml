@using EntityLayer.Concrete
@using PagedList.Mvc
@using PagedList
@model PagedList.IPagedList<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>

        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>

            <td>@item.CategoryName</td>
            <td><a href="/Category/CategoryDelete/@item.CategoryID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Category/CategoryUpdate/@item.CategoryID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }


</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }), new PagedListRenderOptions
{
    LiElementClasses = new List<string>
    {
        "page-link"
    }
})


@*Url yönlendirileceği sayfa ama her seferinde yeni sayfa ekleyerek*@
<a href="/Category/CategoryAdd/" class="btn btn-primary">Yeni kategori</a>

