@using EntityLayer.Concrete
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Depatman Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.DepartmentID</td>
            <td>@item.DepartmentName</td>
            <td><a href="/Department/DepartmentDelete/@item.DepartmentID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Department/DepartmentUpdate/@item.DepartmentID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Department/DepartmentDetail/@item.DepartmentID" class="btn btn-default" style="background-color:lightcoral;color:white">Detay</a></td>

        </tr>
    }


</table>
<a href="/Department/DepartmentAdd/" class="btn btn-primary">Yeni Departman</a>

