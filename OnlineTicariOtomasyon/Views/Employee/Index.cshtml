@using EntityLayer.Concrete
@model List<Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Personel Soyadı</th>
        <th>Resim</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.EmployeeID</td>
            <td>@item.EmployeeName</td>
            <td>@item.EmployeeSurname</td>
            <td>
                <img src="@item.EmployeeImage" style="width:100px; height:100px" />
            </td>
            <td>@item.Department.DepartmentName</td>
            <td><a href="/Employee/EmployeeUpdate/@item.EmployeeID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Department/DepartmentEmployeeSales/@item.EmployeeID" class="btn btn-default" style="background-color:lightcoral;color:white">Detay</a></td>

        </tr>
    }


</table>
<a href="/Employee/EmployeeAdd/" class="btn btn-primary">Yeni Departman</a>


